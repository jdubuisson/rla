<div class="modular-row features {{ page.header.class }}">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
            <h2>{{ page.title }}</h2>
            </div>
            <div class="col-md-8">
                <div class="feature-items row">
                    {% for feature in page.header.features %}
                        <div class="feature col-md-3">
                            {% if feature.icon %}
                                <i class="fa fa-fw fa-{{ feature.icon }}"></i>
                            {% endif %}
                            <div class="feature-content{% if feature.icon %} push{% endif %}">
                                {% if feature.header %}
                                    <h4>{{ feature.header }}</h4>
                                {% endif %}
                                {% if feature.text %}
                                    <p>{{ feature.text }}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {{ content }}
            </div>
            <div class="col-md-4">
                {% set image = page.media.images|first %}
                {% if image %}
                    {{ image.cropResize(400,400).html('','','align-'~page.header.image_align) }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
